@model Store.Web.App.OrderModel
@{
    ViewData["Title"] = "Cart";
}

<h1>Ваша корзина</h1>

<table class="table table-sm table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">№</th>
            <th scope="col">Название</th>
            <th scope="col">Артикул</th>
            <th scope="col">Колличество</th>
            <th scope="col">Цена</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.Items.Length; i++)
            {
        <tr>
            <td class="text-right">@(i+1)</td>
            <td>@Model.Items[i].Name</td>
            <td>@Model.Items[i].Articul</td>
            <td class="text-right">@Model.Items[i].Count</td>
            <td class="text-right">@Model.Items[i].Price.ToString("#.##") грн</td>
            <td class="text-center">
                <form class="form-inline" action="@Url.Action("RemoveItem","Order")" method="post">
                    <input type="hidden" name="id" value="@Model.Items[i].ProductId"/>
                    <button class="btn btn-danger" type="submit">Удалить</button>
                </form>
            </td>
        </tr>
            }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total</td>
            <td class="text-right">@Model.TotalCount</td>
            <td class="text-right">@Model.TotalPrice.ToString("#.##") грн</td>
            <td class="text-center">
                
                    <form class="form-inline" action="@Url.Action("Confirm", "Order")" method="post">
                        
                        <button class="btn btn-primary" type="submit">Подтвердить заказ</button>
                    </form>
                
                </td>
        </tr>
    </tfoot>
</table>

